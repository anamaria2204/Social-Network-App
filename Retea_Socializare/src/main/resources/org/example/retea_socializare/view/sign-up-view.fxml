<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root-pane" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.retea_socializare.controller.SignUpController">
   <children>
      <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label styleClass="welcome-label" text="Want new friends?" />
            <Label styleClass="welcome-label" text="Great, this is your chance" />

            <HBox alignment="CENTER" spacing="10">
               <children>
                  <Label styleClass="form-label" text="First name:" />
                  <TextField fx:id="textFieldFirstName_sign" prefWidth="200" styleClass="form-input" />
               </children>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
               <children>
                  <Label styleClass="form-label" text="Last name:" />
                  <TextField fx:id="textFieldLastName_sign" prefWidth="200" styleClass="form-input" />
               </children>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
               <children>
                  <Label styleClass="form-label" text="Username:" />
                  <TextField fx:id="textFieldUsername_sign" prefWidth="200" styleClass="form-input" />
               </children>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
               <children>
                  <Label styleClass="form-label" text="Password:" />
                  <PasswordField fx:id="textFieldPassword_sign" prefWidth="200" styleClass="form-input" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER_RIGHT" spacing="50">
               <children>
                  <Button mnemonicParsing="false" onAction="#handelSignUpButton" styleClass="login-button" text="Submit" />
                  <Button mnemonicParsing="false" styleClass="login-button" text="Back to login menu" onAction="#handelBackButton" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
